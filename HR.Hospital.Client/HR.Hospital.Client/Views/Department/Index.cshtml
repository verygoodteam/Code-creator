
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/zpageNav.css" rel="stylesheet" />

    <script src="~/js/vue.js"></script>
    <script src="~/js/axios.js"></script>
    <script src="~/js/zpageNav.js"></script>
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <style>
        table, td {
            border: 1px solid #cccccc;
            border-collapse: collapse;
        }

        table {
            width: 800px;
            margin-left: 20px;
            margin-top: 15px;
        }

        td {
            text-align: center;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="divClinical" id="divClinical">
            <span style=" margin-left: 20px">是否为手术间：</span>
            <select id="Select1" v-model="department">
                <option value="0">全部</option>
                <option value="1">是</option>
                <option value="2">否</option>
            </select>
            <span style="margin-left: 20px">科室名称：</span><input type="text" v-model="name" />
            <button type="button" v-on:click="getUser(department,name)">查询</button>
            <button type="button" v-on:click="addUser()">添加</button>
            <table css="table table-bordered">
                <thead>
                    <tr>
                        <td>序号</td>
                        <td>科室名称</td>
                        <td>是否为手术间</td>
                        <td>备注</td>
                        <td>是否启用</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="data in userList">
                        <td>{{data.id}}</td>
                        <td>{{data.administrativeName}}</td>
                        <td>{{data.isoperation==1?"是":"否"}}</td>
                        <td>{{data.administrativeRemark}}</td>
                        <td>{{data.isEnable==0?"是":"否"}}</td>
                        <td>
                            <div>
                                <a href="#" v-on:click="UpdateById(data.id)">编辑</a> |
                                <a href="#" v-on:click="DeleteById(data.id)">禁用</a> |
                                <a href="#" v-on:click="EnableById(data.id)">启用</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <zpagenav v-bind:page="page" v-bind:page-size="pageSize" v-bind:total="total"
                      v-bind:max-page="maxPage" v-on:pagehandler="getUser">
            </zpagenav>
        </div>

    </div>
</body>
</html>

<script>
    var vm = new Vue({
        el: '#app',
        data: {
            userList: [], //数据
            page: 1, //起始页
            pageSize: 3, //页面数据
            total: 10, //总条数
            maxPage: 9, //最大页数
            department: 0,
            name:""
        },
        mounted() {
            this.getUser();
        },
        methods: {
            getUser: function (page) {
                this.page = page,
                    axios.get("/Department/PageList",
                            {
                                 params: {
                                     pageIndex: page,
                                     pageSize: this.pageSize,
                                     isOperation: this.department,
                                     name: this.name
                                 }
                            })
                    .then((response) => {

                        console.log(response.pageList);
                            //数据
                            this.userList = response.data.pageList;
                            //每页大小
                            this.page = response.data.pageSize;
                            //总条数
                            this.total = response.data.pageSizes;
                            //总页数
                            this.maxPage = response.data.maxPage;

                        }).cache(function (error) {
                            userList.fetchError = error;
                        });
            },

            addUser: function() {
                location.href = '/Department/Add';
            },

            DeleteById: function (id) {
                alert(id);
                location.href = '/Department/Delete?id=' + id;
            },

            EnableById: function (id) {
                alert(id);
                location.href = '/Department/Enable?id=' + id;
            },

            UpdateById: function (id) {
                alert(id);
                location.href = '/Department/Update?id=' + id;
            }
        }
    })
</script>