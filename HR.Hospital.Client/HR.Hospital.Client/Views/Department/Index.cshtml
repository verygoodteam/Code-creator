
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/zpageNav.css" rel="stylesheet" />

    <script src="~/js/vue.js"></script>
    <script src="~/js/axios.js"></script>
    <script src="~/js/zpageNav.js"></script>
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <style>
        table, td {
            border: 1px solid #cccccc;
            border-collapse: collapse;
        }

        table {
            margin-top: 15px;
        }

        td {
            text-align: center;
        }
    </style>
</head>
<body>
<h3>科室列表</h3>
<div id="app">
    <p></p>
    <p></p>
    <div id="divDepartment">
        <span>是否为手术间：</span>
        <select id="Select1" v-model="IsOperation">
            <option value="0">全部</option>
            <option value="1">是</option>
            <option value="2">否</option>
        </select>
        <span style="margin-left: 10px">科室名称：</span><input type="text" v-model="departmentName"/>
        <button type="button" v-on:click="getDepartment()" style="margin-left: 5px">查询</button>
        <button type="button" v-on:click="addDepartment()" style="margin-left: 20px">添加</button>
        <table class="table table-bordered">
            <thead>
            <tr>
                <td>序号</td>
                <td>科室名称</td>
                <td>是否为手术间</td>
                <td>备注</td>
                <td>是否启用</td>
                <td>操作</td>
            </tr>
            </thead>
            <tbody>
            <tr v-for="data in userList">
                <td>{{data.id}}</td>
                <td>{{data.administrativeName}}</td>
                <td>{{data.isoperation==1?"是":"否"}}</td>
                <td>{{data.administrativeRemark}}</td>
                <td>{{data.isEnable==0?"是":"否"}}</td>
                <td>
                    <div>
                        <a href="#" v-on:click="UpdateById(data.id)">编辑</a> |
                        <a href="#" v-on:click="DeleteById(data.id)">禁用</a> |
                        <a href="#" v-on:click="EnableById(data.id)">启用</a>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
        <zpagenav v-bind:page="page" v-bind:page-size="pageSize" v-bind:total="total"
                  v-bind:max-page="maxPage" v-on:pagehandler="getUser">
        </zpagenav>
    </div>
</div>
</body>
</html>

<script>
    var vm = new Vue({
        el: '#app',
        data: {
            userList: [], //数据
            page: 1, //起始页
            pageSize: 3, //页面数据
            total: 10, //总条数
            maxPage: 9, //最大页数
            IsOperation: 0,
            departmentName:""
        },
        mounted() {
            this.getDepartment();
        },
        methods: {
            getDepartment: function (page) {
                this.page = page,
                    axios.get("/Department/PageList",
                            {
                                 params: {
                                     pageIndex: page,
                                     pageSize: this.pageSize,
                                     isOperation: this.IsOperation,
                                     name: this.departmentName
                                 }
                            })
                    .then((response) => {
                            this.userList = response.data.pageList;
                            this.page = response.data.pageSize;
                            this.total = response.data.pageSizes;
                            this.maxPage = response.data.maxPage;

                        }).cache(function (error) {
                            userList.fetchError = error;
                        });
            },

            addDepartment: function() {
                location.href = '/Department/Add';
            },

            DeleteById: function (id) {
                //alert(id);
                location.href = '/Department/Delete?id=' + id;
            },

            EnableById: function (id) {
                //alert(id);
                location.href = '/Department/Enable?id=' + id;
            },

            UpdateById: function (id) {
                //alert(id);
                location.href = '/Department/Update?id=' + id;
            }
        }
    })
</script>