
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/zpageNav.css" rel="stylesheet" />

    <script src="~/js/vue.js"></script>
    <script src="~/js/axios.js"></script>
    <script src="~/js/zpageNav.js"></script>

    <style>
        table, td {
            border: 1px solid #cccccc;
            border-collapse: collapse;
        }

        table {
            width: 800px;
            margin-left: 20px;
            margin-top: 15px;
        }

        td {
            text-align: center;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="divstudents" id="divClinical">
            <span style=" margin-left: 20px">科室：</span><input type="text" v-model="department" />
            <span style="margin-left: 20px">姓名：</span><input type="text" v-model="name" />
            <button type="button" v-on:click="getUser(department)">查询</button>
            <a href="/clinical/add" v-on:click="">添加</a>
            <table>
                <thead>
                    <tr>
                        <td>序号</td>
                        <td>姓名</td>
                        <td>性别</td>
                        <td>所属科室</td>
                        <td>工号</td>
                        <td>备注</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="data in user" class="data-row">
                        <td :contenteditable="false" v-model="data.Id">{{data.id}}</td>
                        <td :contenteditable="false" v-model="data.ClinicUserName">{{data.clinicUserName}}</td>
                        <td :contenteditable="false" v-model="data.Sex">{{data.sex==1?"男":"女"}}</td>
                        <td :contenteditable="false" v-model="data.Aadministrativeid">{{data.aadministrativeid}}</td>
                        <td :contenteditable="false" v-model="data.Jobnumber">{{data.jobnumber}}</td>
                        <td :contenteditable="false" v-model="data.ClinicUserRemark">{{data.clinicUserRemark}}</td>
                        <td>
                            <div>
                                <a href="/clinical/update" v-on:click="Update(data.Id)">编辑</a> |
                                <a href="/clinical/delete" v-on:click="Delete(data.Id)">删除</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</body>
</html>

<script>
    var vm = new Vue({
        el: '#app',
        data: {
            user: []
        },
        mounted() {
            this.getUser();
        },
        methods: {

            getUser: function (department) {
                var model = new URLSearchParams();
                model.append('administrativeId', this.department);
                axios.get('http://localhost:54463/api/Clinical/GetList').then(
                    (response) => {
                        this.user = response.data;
                    }
                );
            }

        }
    })
</script>