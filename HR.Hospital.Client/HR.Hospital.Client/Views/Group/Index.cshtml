
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/zpageNav.css" rel="stylesheet" />

    <script src="~/js/vue.js"></script>
    <script src="~/js/axios.js"></script>
    <script src="~/js/zpageNav.js"></script>

    <style>
        table, td {
            border: 1px solid #cccccc;
            border-collapse: collapse;
        }

        table {
            width: 800px;
            margin-left: 20px;
            margin-top: 15px;
        }

        td {
            text-align: center;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="divstudents" id="divGroup">
            <span style="margin-left: 20px">姓名：</span><input type="text" v-model="name" />
            <button type="button" v-on:click="pageHandler(name)">查询</button>
            <button type="button" v-on:click="">添加</button>
            <table>
                <thead>
                    <tr>
                        <td>序号</td>
                        <td>专业组名称</td>
                        <td>专业组颜色</td>
                        <td>相关科室</td>
                        <td>带教</td>
                        <td>组长</td>
                        <td>组员</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="data in group" class="data-row">
                        <td :contenteditable="false" v-model="data.Id">{{data.id}}</td>
                        <td :contenteditable="false" v-model="data.ClinicUserName">{{data.professionalGroupName}}</td>
                        <td :contenteditable="false" v-model="data.ProfessionalGroupColore">{{data.professionalGroupColore}}</td>
                        <td :contenteditable="false" v-model="data.DepartmentId">{{data.departmentId}}</td>
                        <td :contenteditable="false" v-model="data.TeachingId">{{data.teachingId}}</td>
                        <td :contenteditable="false" v-model="data.GroupLeader">{{data.groupLeader}}</td>
                        <td :contenteditable="false" v-model="data.TeamMember">{{data.teamMember}}</td>
                        <td>
                            <div>
                                <a href="#" v-on:click="Update(data.Id)">编辑</a> |
                                <a href="#" v-on:click="Delete(data.Id)">删除</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</body>
</html>

<script>
    var vm = new Vue({
        el: '#app',
        data: {
            group: []
        },
        mounted() {
            this.getGroup();
        },
        methods: {
            getGroup: function () {
                axios.get('http://localhost:54463/api/group/getList').then(
                    (response) => {
                        this.group = response.data;
                    }
                );
            }
        }
    })
</script>